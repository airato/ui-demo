{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules/**", "**/*.spec.ts"]
}
